.share { 
  height: 50px;
  width: 50px;
  position: absolute;
  top: 20rpx;
  right: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  background: rgba(0, 0, 0, .1);
  border-radius: 50%;
  z-index: 10;
} 
.share image {
  height: 70rpx;
  width: 70rpx;
}
.share text {
    color: black;
}

.share button {
  position: absolute;
  height: 50px !important;
  width: 50px !important;
  opacity: 0;
  z-index: 99;
}
